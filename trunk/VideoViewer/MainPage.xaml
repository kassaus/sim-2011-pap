<UserControl x:Class="VideoViewer.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" d:DesignHeight="768" d:DesignWidth="1024">
    <UserControl.Resources>
        <BitmapImage x:Key="play_button" UriSource="images/play_button.png" />
    </UserControl.Resources>
    <Grid x:Name="LayoutRoot" Background="White">
        <Image Height="70" HorizontalAlignment="Center" Margin="192,554,762,144" Name="play" Stretch="Fill" VerticalAlignment="Center" Width="70" Source="{StaticResource play_button}" MouseLeftButtonDown="play_MouseLeftButtonDown" />
        <MediaElement Height="480" HorizontalAlignment="Center" Name="videoPlayer" VerticalAlignment="Center" Width="640" MaxHeight="480" MaxWidth="640" MinHeight="189" MinWidth="252" AutoPlay="False" />
    </Grid>
</UserControl>
